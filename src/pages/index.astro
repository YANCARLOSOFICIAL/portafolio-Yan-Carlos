
---
import Layout from '../layouts/Layout.astro';
import App from '../components/react/App.jsx';
---

<Layout
  title="Yan Carlos Guerra - Desarrollador Full Stack"
  description="Portafolio profesional de Yan Carlos Guerra. Especialista en desarrollo full stack con React, Astro, Node.js y tecnologías modernas. Creando experiencias digitales únicas."
>
  <App client:load />

  <!-- Global cursor hide style -->
  <style is:global>
    * {
      cursor: none !important;
    }

    @media (hover: none) and (pointer: coarse) {
      * {
        cursor: auto !important;
      }
    }

    /* Smooth scroll */
    html {
      scroll-behavior: smooth;
    }
  </style>
</Layout>
