
---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/react/Navbar.jsx';
import Hero from '../components/react/Hero.jsx';
import About from '../components/react/About.jsx';
import Experience from '../components/react/Experience.jsx';
import Projects from '../components/react/Projects.jsx';
import Skills from '../components/react/Skills.jsx';
import Education from '../components/react/Education.jsx';
